<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cc_root"
    android:layout_width="match_parent"
    android:layout_height="88dp">

    <Spinner
        android:id="@+id/cc_spinner"
        android:layout_width="111dp"
        android:layout_height="64dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/cc_textView"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cc_editText"
        android:layout_below="@+id/cc_editText"
        android:text="1 USD = 0,48 EUR"
        android:textAlignment="textEnd"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cc_editText"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cc_spinner"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="none|numberDecimal"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text="$1.000,00"
        android:textAlignment="textEnd" />

</RelativeLayout>
